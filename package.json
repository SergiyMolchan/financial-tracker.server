{
    "name": "finance-tracker.server",
    "version": "0.0.1",
    "description": "api for application finance-tracker",
    "main": "index.js",
    "scripts": {
        "dev:services:stop": "docker-compose --file ./development/docker-compose.yml stop",
        "dev:services:rm": "docker-compose --file ./development/docker-compose.yml rm -f",
        "dev:services:kill": "npm run dev:services:stop && npm run dev:services:rm",
        "dev:services:init": "docker-compose --file ./development/docker-compose.yml up",
        "dev:services:seeds": "node ./pg-main/index.js",
        "dev:services:run": "npm run dev:services:kill && npm run dev:services:init &> /dev/null && sleep 3 && npm run dev:services:seeds",
        "dev:server:run": "nodemon",
        "dev:server:build": "rimraf ./build && npm run test && tsc",
        "dev:all:run": "npm run dev:services:run && npm run dev:server:run",
        "pord:server:start": "npm run build && node build/index.js",
        "eslint": "eslint ./src --fix",
        "test": "jest --coverage"
    },
    "repository": {
        "type": "git",
        "url": "git+https://github.com/SergiyMolchan/financial-tracker.server.git"
    },
    "author": "Molchan Sergiy",
    "license": "MIT",
    "bugs": {
        "url": "https://github.com/SergiyMolchan/financial-tracker.server/issues"
    },
    "homepage": "https://github.com/SergiyMolchan/financial-tracker.server#readme",
    "dependencies": {
        "@types/ajv": "^1.0.0",
        "@types/bcrypt": "^3.0.0",
        "@types/bcryptjs": "^2.4.2",
        "@types/jest": "^26.0.15",
        "@types/node": "^14.14.9",
        "@types/pg": "^7.14.7",
        "@types/redis": "^2.8.28",
        "@types/uuid": "^8.3.0",
        "ajv": "^8.0.1",
        "bcryptjs": "^2.4.3",
        "conventional-changelog-conventionalcommits": "^4.5.0",
        "eslint-plugin-import": "^2.22.1",
        "eslint-plugin-jest": "^24.1.3",
        "fastify": "^3.12.0",
        "fastify-cookie": "^5.3.0",
        "fastify-cors": "^6.0.2",
        "jest": "^26.6.3",
        "nodemon": "^2.0.6",
        "pg": "^8.5.1",
        "redis": "^3.1.0",
        "rimraf": "^3.0.2",
        "ts-jest": "^26.4.4",
        "ts-node": "^9.0.0",
        "typescript": "^4.1.2",
        "uuid": "^8.3.2"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^4.8.1",
        "@typescript-eslint/parser": "^4.8.1",
        "eslint": "^7.14.0",
        "eslint-plugin-json": "^2.1.2",
        "eslint-plugin-security": "^1.4.0",
        "husky": "^4.3.0",
        "pre-commit": "^1.2.2"
    },
    "husky": {
        "hooks": {
            "pre-commit": "npm run eslint && npm run test",
            "commit-msg": "commitlint -E HUSKY_GIT_PARAMS"
        }
    }
}
